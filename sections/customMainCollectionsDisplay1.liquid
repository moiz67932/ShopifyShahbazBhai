<section class="collections-section">
  <div class="container">
    <h2 class="heading">WOMEN</h2>
    <p class="subheading">Abayas, Jilbabs, Jalabiyas, Kaftans, Hijab Scarfs & more</p>
    <div class="collections-grid">
      {% for block in section.blocks %}
      <div class="collection-item {{ block.settings.collection_layout }}">
        <a href="{{ block.settings.collection | link_to: 'collections' }}" class="collection-link">
          <img src="{{ block.settings.image | img_url }}" alt="{{ block.settings.collection }}" height=10 width=10 class="collection-image" />
          <div class="collection-content">
            <h3 class="collection-title">{{ block.settings.title }}</h3>
            <button class="shop-now-btn">Shop Now</button>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Collection Title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection Link"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Collection Image"
        },
        {
          "id": "collection_layout",
          "type": "select",
          "label": "Layout Style",
          "options": [
            { "value": "large", "label": "Large (2 rows)" },
            { "value": "small", "label": "Small (1 row)" },
            { "value": "medium", "label": "Medium (2 rows slightly larger)" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections Grid",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
