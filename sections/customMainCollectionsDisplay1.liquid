<section class="collections-section">
  <div class="container">
    <h2 class="heading">WOMEN</h2>
    <p class="subheading">Abayas, Jilbabs, Jalabiyas, Kaftans, Hijab Scarfs & more</p>
    <div class="collections-grid">
      {% for block in section.blocks %}
      <div class="collection-item {{ block.settings.collection_layout }}">
        <a href="{{ block.settings.collection | link_to: 'collections' }}" class="collection-link">
          <img src="{{ block.settings.image | image_url: 'medium' }}" alt="{{ block.settings.collection }}" height=10 width=10 class="collection-image" />
          <div class="collection-content">
            <h3 class="collection-title">{{ block.settings.title }}</h3>
            <button class="shop-now-btn">Shop Now</button>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .collections-section {
  padding: 40px 20px;
  background-color: #f9f9f9;
}

.heading {
  font-size: 28px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10px;
}

.subheading {
  font-size: 16px;
  color: #555;
  text-align: center;
  margin-bottom: 30px;
}

.collections-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  grid-template-rows: repeat(4, auto);
  gap: 20px;
}

.collection-item {
  position: relative;
  overflow: hidden;
  border-radius: 10px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.collection-item.large {
  grid-row: span 2;
}

.collection-item.medium {
  grid-row: span 2;
}

.collection-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.collection-content {
  position: absolute;
  bottom: 10px;
  left: 10px;
  background: rgba(0, 0, 0, 0.5);
  padding: 10px;
  color: white;
  border-radius: 5px;
}

.shop-now-btn {
  background-color: #ff6a00;
  color: white;
  border: none;
  padding: 8px 15px;
  border-radius: 5px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.shop-now-btn:hover {
  background-color: #e55d00;
}

</style>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Collection Title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection Link"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Collection Image"
        },
        {
          "id": "collection_layout",
          "type": "select",
          "label": "Layout Style",
          "options": [
            { "value": "large", "label": "Large (2 rows)" },
            { "value": "small", "label": "Small (1 row)" },
            { "value": "medium", "label": "Medium (2 rows slightly larger)" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections Grid",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
