  <div class="index-custom-container">
    <div class="index-custom-wrapper m-section-my">
      <div class="index-custom-content">
        <div class="index-custom-content-wrapper">
          <div class="index-custom-content-wrapper-line-top"></div>
          <div class="index-custom-content-wrapper-line-bottom"></div>
          <div class="index-custom-content-box">
            <div class="index-custom-content-heading">
              <h2>{{ section.settings.heading }}</h2>
            </div>

            <div class="index-custom-content-desc">
              <p>{{ section.settings.description }}</p>
            </div>

            <div class="index-custom-content-btn">
              <a
                href="{{ section.settings.btn_link }}"
                style="color: #ffffff; background-color: {{ section.settings.btn_color }}"
              >
                {{ section.settings.btn_text }}
              </a>
            </div>
          </div>
        </div>

        <div class="index-custom-content-media">
          <div class="index-custom-content-media-box">
            <a href="{{ section.settings.image1_link }}">
              <img
                src="{{ section.settings.image1 | image_url }}"
                alt="{{ section.settings.image1_alt }}"
                width="{{ section.settings.image1_width }}"
                height="{{ section.settings.image1_height }}"
              >
            </a>
          </div>
          <div class="index-custom-content-media-box">
            <a href="{{ section.settings.image2_link }}">
              <img
                src="{{ section.settings.image2 | image_url }}"
                alt="{{ section.settings.image2_alt }}"
                width="{{ section.settings.image2_width }}"
                height="{{ section.settings.image2_height }}"
              >
            </a>
          </div>
        </div>
      </div>

      <div class="index-custom-media">
        <a href="{{ section.settings.main_image_link }}">
          <img
            src="{{ section.settings.main_image | image_url }}"
            alt="{{ section.settings.main_image_alt }}"
            width="{{ section.settings.main_image_width }}"
            height="{{ section.settings.main_image_height }}"
          >
        </a>
      </div>
    </div>
  </div>
</div>

