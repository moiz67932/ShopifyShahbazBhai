<section class="custom-collection-grid">
  <h1>{{ section.settings.heading_text }}</h1>
  <p>{{ section.settings.subheading_text }}</p>

  <div class="grid">
    <!-- Abayas - Taller Image -->
    <div class="item abaya">
      <a href="{{ section.settings.collection1.url }}">
        <img src="{{ section.settings.collection1.image | image_url }}" alt="{{ section.settings.collection1.title }}">
        <button>{{ section.settings.collection1.title }}</button>
      </a>
    </div>

    <!-- Jilbabs - Short Image -->
    <div class="item jilbab">
      <a href="{{ section.settings.collection2.url }}">
        <img src="{{ section.settings.collection2.image | image_url }}" alt="{{ section.settings.collection2.title }}">
        <button>{{ section.settings.collection2.title }}</button>
      </a>
    </div>

    <!-- Kaftans - Short Image below Jilbabs -->
    <div class="item kaftan">
      <a href="{{ section.settings.collection3.url }}">
        <img src="{{ section.settings.collection3.image | image_url }}" alt="{{ section.settings.collection3.title }}">
        <button>{{ section.settings.collection3.title }}</button>
      </a>
    </div>

    <!-- Hijab Scarfs - Taller Image -->
    <div class="item hijab">
      <a href="{{ section.settings.collection4.url }}">
        <img src="{{ section.settings.collection4.image | image_url }}" alt="{{ section.settings.collection4.title }}">
        <button>{{ section.settings.collection4.title }}</button>
      </a>
    </div>
  </div>
</section>

<style>
  .custom-collection-grid {
      text-align: center;
      padding: 20px;
      margin-bottom: 40px;
  }

  .custom-collection-grid h1 {
      font-size: 2.5rem;
      margin-bottom: 10px;
  }

  .custom-collection-grid .grid {
      display: grid;
      grid-template-areas:
          /* "abaya abaya"
          "jilbab kaftan"
          "hijab hijab"; */

          grid-template-areas:
          "abaya jilbab hijab"
          "abaya kaftan hijab";
      grid-template-columns: 2fr 1fr 1fr;
      grid-template-rows: auto auto auto;
      gap: 20px;
      max-width: 1000px;
      margin: 0 auto;
  }

  .custom-collection-grid .item {
      position: relative;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .custom-collection-grid .abaya {
      grid-area: abaya;
      max-height: 550px;
  }

  .custom-collection-grid .jilbab {
      grid-area: jilbab;
      max-height: 270px;
  }

  .custom-collection-grid .kaftan {
      grid-area: kaftan;
      max-height: 270px;
  }

  .custom-collection-grid .hijab {
      grid-area: hijab;
      max-height: 550px;
  }

  .custom-collection-grid .item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .custom-collection-grid .item button {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      padding: 10px 20px;
      background-color: rgba(0, 0, 0, 0.7);
      color: #fff;
      border: none;
      cursor: pointer;
      font-size: 1.4rem;
      border-radius: 5px;
      transition: background-color 0.3s ease;
  }

  .custom-collection-grid .item button:hover {
      background-color: rgba(0, 0, 0, 0.85);
  }
</style>

