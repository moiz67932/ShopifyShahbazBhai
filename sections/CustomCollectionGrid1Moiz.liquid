<section class="custom-collection-grid">
    <h1>WOMEN</h1>
    <p>Abayas, Jilbabs, Jalabiyas, Kaftans, Hijab Scarfs & more</p>

    <div class="grid">
        <!-- Abayas - Taller Image -->
        <div class="item abaya">
            <a href="{{ section.settings.collection1.url }}">
                <img src="{{ section.settings.collection1.image | image_url }}" alt="{{ section.settings.collection1.title }}">
            </a>
            <button>Abaya for Women</button>
        </div>

        <!-- Jilbabs - Short Image -->
        <div class="item jilbab">
            <a href="{{ section.settings.collection2.url }}">
                <img src="{{ section.settings.collection2.image | image_url }}" alt="{{ section.settings.collection2.title }}">
            </a>
            <button>Jilbabs</button>
        </div>

        <!-- Kaftans - Short Image below Jilbabs -->
        <div class="item kaftan">
            <a href="{{ section.settings.collection3.url }}">
                <img src="{{ section.settings.collection3.image | image_url }}" alt="{{ section.settings.collection3.title }}">
            </a>
            <button>Kaftan</button>
        </div>

        <!-- Hijab Scarfs - Taller Image -->
        <div class="item hijab">
            <a href="{{ section.settings.collection4.url }}">
                <img src="{{ section.settings.collection4.image | image_url }}" alt="{{ section.settings.collection4.title }}">
            </a>
            <button>Hijab Scarfs</button>
        </div>
    </div>
</section>

<style>
.custom-collection-grid {
    text-align: center;
    padding: 20px;
}

.custom-collection-grid h1 {
    font-size: 2rem;
    margin-bottom: 10px;
}

.custom-collection-grid .grid {
    display: grid;
    grid-template-areas: 
        "abaya jilbab hijab"
        "abaya kaftan hijab";
    grid-template-columns: 2fr 1fr 1fr;
    grid-template-rows: auto auto auto;
    gap: 20px;
    max-width: 1240px;
    margin: 0 auto;
}

.custom-collection-grid .item {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.custom-collection-grid .abaya {
    grid-area: abaya;
  max-height:500px;
}

.custom-collection-grid .jilbab {
    grid-area: jilbab;
  max-height:250px;
}

.custom-collection-grid .kaftan {
    grid-area: kaftan;
  max-height:250px;
}

.custom-collection-grid .hijab {
    grid-area: hijab;
  max-height:500px;
}

.custom-collection-grid .item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.custom-collection-grid .item button {
    width: 100%;
    padding: 10px 0;
    background-color: #444;
    color: #fff;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.custom-collection-grid .item button:hover {
    background-color: #555;
}
</style>


