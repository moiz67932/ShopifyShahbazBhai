{% comment %}
  
 <div>
  <h1>{{ section.settings.collectionName }}</h1>
  {% for block in section.blocks %}
    {% assign collection = block.settings.collection %}
    {% if collection %}
      <p>{{ collection.title }}</p>
      {% if collection.image %}
        <img src="{{ collection.image | img_url: '300x300' }}" alt="{{ collection.title }}" height="300" width="300">
      {% else %}
        <p>No image available for {{ collection.title }}</p>
      {% endif %}
    {% else %}
      <p>No collection selected</p>
    {% endif %}
  {% endfor %}
</div>
{% endcomment %}

<section class="container">
        <h1>WOMEN</h1>
        <p>Abayas, Jilbabs, Jalabiyas, Kaftans, Hijab Scarfs & more</p>

        <div class="grid">
            <!-- Abayas -->
            <div class="item abaya">
                 <img src="{{ collection.image | image_url: '300x300' }}" alt="{{ collection.title }}" height="300" width="300">
                <button>Abaya for Women</button>
            </div>

            <!-- Jilbabs -->
            <div class="item jilbab">
                 <img src="{{ collection.image | image_url: '300x300' }}" alt="{{ collection.title }}" height="300" width="300">
                <button>Jilbabs</button>
            </div>

            <!-- Kaftans -->
            <div class="item kaftan">
                 <img src="{{ collection.image | image_url: '300x300' }}" alt="{{ collection.title }}" height="300" width="300">
                <button>Kaftan</button>
            </div>

            <!-- Hijab Scarfs -->
            <div class="item hijab">
                 <img src="{{ collection.image | image_url: '300x300' }}" alt="{{ collection.title }}" height="300" width="300">
                <button>Hijab Scarfs</button>
            </div>
        </div>
    </section>

{% schema %}
  {
    "name": "Custom Collection Grid 1",
    "settings": [
      {
        "type": "text",
        "label": "Collection Name",
        "id": "collectionName"
      }
    ],
    "blocks": [
      {
        "name": "collection",
        "type": "collection",
        "settings": [
          {
            "type": "collection",
            "label": "Collection",
            "id": "collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Collection Grid 1"
      }
    ]
  }
{% endschema %}
