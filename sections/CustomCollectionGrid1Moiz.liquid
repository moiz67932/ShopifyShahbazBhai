{% comment %}
  
 <div>
  <h1>{{ section.settings.collectionName }}</h1>
  {% for block in section.blocks %}
    {% assign collection = block.settings.collection %}
    {% if collection %}
      <p>{{ collection.title }}</p>
      {% if collection.image %}
        <img src="{{ collection.image | img_url: '100x100' }}" alt="{{ collection.title }}" height="100" width="100">
      {% else %}
        <p>No image available for {{ collection.title }}</p>
      {% endif %}
    {% else %}
      <p>No collection selected</p>
    {% endif %}
  {% endfor %}
</div>
{% endcomment %}

<section class="container">
        <h1>WOMEN</h1>
        <p>Abayas, Jilbabs, Jalabiyas, Kaftans, Hijab Scarfs & more</p>

        <div class="grid">
            <!-- Abayas -->
            <div class="item abaya">
                 <img src="{{ collection.image | image_url: '100x100' }}" alt="{{ collection.title }}" height="100" width="100">
                <button>Abaya for Women</button>
            </div>

            <!-- Jilbabs -->
            <div class="item jilbab">
                 <img src="{{ collection.image | image_url: '100x100' }}" alt="{{ collection.title }}" height="100" width="100">
                <button>Jilbabs</button>
            </div>

            <!-- Kaftans -->
            <div class="item kaftan">
                 <img src="{{ collection.image | image_url: '100x100' }}" alt="{{ collection.title }}" height="100" width="100">
                <button>Kaftan</button>
            </div>

            <!-- Hijab Scarfs -->
            <div class="item hijab">
                 <img src="{{ collection.image | image_url: '100x100' }}" alt="{{ collection.title }}" height="100" width="100">
                <button>Hijab Scarfs</button>
            </div>
        </div>
    </section>

    <style>
      
.container {
    text-align: center;
    padding: 20px;
}

.container h1 {
    font-size: 2rem;
    margin-bottom: 10px;
}

.container p {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 20px;
}

/* Grid layout */
.grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* Grid items */
.item {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.item img {
    width: 10px;
    height: auto;
}

.item button {
    width: 100%;
    padding: 10px 0;
    background-color: #444;
    color: #fff;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.item button:hover {
    background-color: #555;
}

/* Specific item styles */
.abaya img {
    background-color: #e3e8f0;
}

.jilbab img {
    background-color: #f4e1d2;
}

.kaftan img {
    background-color: #d6e8e3;
}

.hijab img {
    background-color: #f5d4d6;
}
    </style>

{% schema %}
  {
    "name": "Custom Collection Grid 1",
    "settings": [
      {
        "type": "text",
        "label": "Collection Name",
        "id": "collectionName"
      }
    ],
    "blocks": [
      {
        "name": "collection",
        "type": "collection",
        "settings": [
          {
            "type": "collection",
            "label": "Collection",
            "id": "collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Collection Grid 1"
      }
    ]
  }
{% endschema %}
