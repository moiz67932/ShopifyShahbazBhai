<section class="custom-collection-grid2">
  <h1>{{ section.settings.heading_text }}</h1>
  <p>{{ section.settings.subheading_text }}</p>

  <div class="grid">
    <!-- Abayas - Taller Image -->
    <div class="item abaya">
      <a href="{{ section.settings.collection1.url }}">
        <img src="{{ section.settings.collection1.image | image_url }}" alt="{{ section.settings.collection1.title }}">
        <h3>{{ section.settings.subText1 }}</h3>
        <p>{{ section.settings.mainText1 }}</p>
        <button>{{ section.settings.collection1.title }}</button>
      </a>
    </div>

    <!-- Jilbabs - Short Image -->
    <div class="item jilbab">
      <a href="{{ section.settings.collection2.url }}">
        <img src="{{ section.settings.collection2.image | image_url }}" alt="{{ section.settings.collection2.title }}">
        <h3>{{ section.settings.subText2 }}</h3>
        <p>{{ section.settings.mainText2 }}</p>
        <button>{{ section.settings.collection2.title }}</button>
      </a>
    </div>

    <!-- Kaftans - Short Image below Jilbabs -->
    <div class="item kaftan">
      <a href="{{ section.settings.collection3.url }}">
        <img src="{{ section.settings.collection3.image | image_url }}" alt="{{ section.settings.collection3.title }}">
        <h3>{{ section.settings.subText3 }}</h3>
        <p>{{ section.settings.mainText3 }}</p>
        <button>{{ section.settings.collection3.title }}</button>
      </a>
    </div>
  </div>
</section>

<style>
      .custom-collection-grid2 {
          text-align: center;
          padding-top: 40px;
        padding-right:20px;
        padding-left:20px;
        padding-bottom:0px;
          margin-bottom: 0px;
        background-color:#181404;
      }

      .custom-collection-grid2 h1 {
          font-size: 2.5rem;
          margin-bottom: 10px;
      }

    .custom-collection-grid2 .item h3 {
      position: absolute;
      bottom: 70px;
      left: 50%;
      transform: translateX(-100%);
      font-size: 1.8rem;
      color: #fff;
      font-weight: 400;
      text-transform: uppercase;
      text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
      margin: 0;
      width:100%;
  }

  .custom-collection-grid2 .item p {
      position: absolute;
      bottom: 40px;
      left: 50%;
      transform: translateX(-100%);
      font-size: 1.8rem;
      color: #fff;
      font-weight: 700;
      text-transform: uppercase;
      text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
      margin: 0;
  }

  .custom-collection-grid2 .item button {
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
      padding: 12px 24px;
      background-color: rgba(0, 0, 0, 0.85);
      color: #fff;
      border: none;
      font-size: 1.2rem;
      text-transform: uppercase;
      font-weight: 700;
      border-radius: 5px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
      transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .custom-collection-grid2 .item button:hover {
      background-color: rgba(0, 0, 0, 1);
      transform: scale(1.05);
  }



      .custom-collection-grid2 .grid {
          display: grid;
          /* grid-template-areas:
               "abaya abaya"
              "jilbab kaftan"
              "hijab hijab";  */

              grid-template-areas:
              "abaya jilbab kaftan";
          grid-template-columns: 1fr 1fr 1fr;
          grid-template-rows: auto auto auto;
            gap: 30px;
          max-width: 1200px;
          margin: 0 auto;
        padding-bottom:0px;
        margin-bottom:0px;
      }

      /* Media query for small devices */
    @media (max-width: 768px) {
      .custom-collection-grid2 .grid {
          grid-template-areas:
              "abaya"
              "jilbab"
              "kaftan";
          grid-template-columns: 1fr;
          grid-template-rows: auto auto auto;
      }

          .custom-collection-grid2 .abaya {
          max-height: 350px;
      }

      .custom-collection-grid2 .jilbab {
          max-height: 350px;
      }

      .custom-collection-grid2 .kaftan {
          max-height: 350px;
      }
    }

      .custom-collection-grid2 .item {
          position: relative;
          background-color: #fff;
          border: none;
          border-radius: 10px;
          overflow: hidden;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .custom-collection-grid2 .abaya {
          grid-area: abaya;
          max-height: 550px;
      }

      .custom-collection-grid2 .jilbab {
          grid-area: jilbab;
          max-height: 550px;
      }

      .custom-collection-grid2 .kaftan {
          grid-area: kaftan;
          max-height: 550px;
      }


      .custom-collection-grid2 .item img {
          width: 100%;
          height: 100%;
          object-fit: cover;
      }

      .custom-collection-grid2 .item button {
          position: absolute;
          bottom: 20px;
          left: 50%;
          transform: translateX(-50%);
          padding: 10px 20px;
          background-color: rgba(0, 0, 0, 0.7);
          color: #fff;
          border: none;
          cursor: pointer;
          font-size: 1.4rem;
          border-radius: 5px;
          transition: background-color 0.3s ease;
      }

      .custom-collection-grid2 .item button:hover {
          background-color: rgba(0, 0, 0, 0.85);
      }
</style>

