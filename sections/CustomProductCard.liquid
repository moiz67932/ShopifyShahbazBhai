<div class="productCard">
  <div class="productImageWrapper">
    <img {{ section.settings.product_list | image_url }}" alt="{{ section.settings.collection1.title }} class="productImage primaryImage" />
    <img src="image2.jpg" alt="Product Image" class="productImage secondaryImage" />
    <div class="productOverlay">
      <div class="buttons">
        <button class="quickView">Quick View</button>
        <button class="quickShop">Quick Shop</button>
      </div>
      <div class="wishlistWrapper">
        <i class="heartIcon">&#9825;</i>
        <span class="wishlistText">Add to Wishlist</span>
      </div>
    </div>
  </div>
  <div class="productDetails">
    <h3 class="productTitle">Flare Black Abaya</h3>
    <p class="productPrice">Rs.13,828.16 PKR</p>
  </div>
</div>
<div class="productCard">
  
{% render 'card-product',
              card_product: section.settings.product,
  show_secondary_image:true
  %}
</div>



<style>
/* General Card Styling */
.productCard {
  position: relative;
  width: 280px;
  margin: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  background-color: #fff;
}

.productImageWrapper {
  position: relative;
  overflow: hidden;
}

.productImage {
  width: 100%;
  transition: opacity 0.5s ease, transform 0.5s ease;
}

.secondaryImage {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transform: scale(1.2);
}

.productImageWrapper:hover .secondaryImage {
  opacity: 1;
  transform: scale(1);
}

.productImageWrapper:hover .primaryImage {
  opacity: 0;
}

.productOverlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.productImageWrapper:hover .productOverlay {
  opacity: 1;
}

.buttons {
  display: flex;
  gap: 10px;
}

.quickView,
.quickShop {
  padding: 8px 15px;
  background-color: #fff;
  color: #000;
  border: none;
  cursor: pointer;
  font-size: 14px;
  font-weight: bold;
  border-radius: 5px;
  transition: transform 0.2s ease, background-color 0.2s ease;
}

.quickView:hover,
.quickShop:hover {
  background-color: #000;
  color: #fff;
  transform: scale(1.05);
}

.wishlistWrapper {
  position: absolute;
  top: 10px;
  left: 10px;
  display: flex;
  align-items: center;
  gap: 5px;
  font-size: 14px;
  color: #fff;
  cursor: pointer;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.heartIcon {
  font-size: 20px;
}

.productImageWrapper:hover .wishlistWrapper {
  opacity: 1;
}

.wishlistText {
  display: none;
}

.wishlistWrapper:hover .wishlistText {
  display: inline;
}

.productDetails {
  padding: 15px;
  text-align: center;
}

.productTitle {
  font-size: 16px;
  font-weight: bold;
  margin: 0 0 5px;
}

.productPrice {
  font-size: 14px;
  color: #666;
  margin: 0;
}

  }
</style>

{% schema %}
  {
    "name": "Custom Product Card",
    "settings": [
      {
        "type":"product_list",
        "id":"product_list",
        "label":"Products",
        "limit":12
      },
      {
        "type":"product",
        "id":"product",
        "label":"Featured Product",
      },
    ],
    "presets":[
      {
        "name": "Custom Product Card"
      }
    ]
  }
{% endschema %}