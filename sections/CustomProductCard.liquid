{{ 'flickitycss.css' | asset_url | stylesheet_tag }}

<section class="section">
  <h2 class="heading">{{ section.settings.header }}</h2>
  <div class="container carousel">
    {% for block in section.blocks %}
      <div class="productCard carousel-cell">
        {% render 'CustomCardProduct2',
          card_product: block.settings.product,
          show_secondary_image: true,
          show_price: true,
          lazy_load: true,
          show_quick_add: true
        %}
      </div>
    {% endfor %}
  </div>
</section>

{{ 'flickityjs.js' | asset_url | script_tag }}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var elem = document.querySelector('.carousel');
    var flkty = new Flickity(elem, {
      // options
      cellAlign: 'left',
      contain: true,
      pageDots: true,
      prevNextButtons: true,
      draggable: true,
      groupCells: true,
      adaptiveHeight: false,
      wrapAround: true,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            groupCells: 1
          }
        },
        {
          breakpoint: 1024,
          settings: {
            groupCells: 2
          }
        },
        {
          breakpoint: 9999,
          settings: {
            groupCells: 4
          }
        }
      ]
    });
  });
</script>

<style>
  .heading {
    border: 1px solid #808080;
    border-radius: 20px;
    padding: 10px 20px;
    display: inline-block;
    margin: 0 auto;
    font-size: 14px;
  }

  .section {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    margin-bottom:48px;
  }

  .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: stretch;
    gap: 20px;
    margin-top: 30px;
    padding: 0 15px;
  }

  /* General Card Styling */
  .productCard {
    position: relative;
    width: 100%;
    max-width: 275px;
  }

  .productOverlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.6);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .productImageWrapper:hover .productOverlay {
    opacity: 1;
  }

  .wishlistWrapper {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    color: #fff;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .heartIcon {
    font-size: 20px;
  }

  .productImageWrapper:hover .wishlistWrapper {
    opacity: 1;
  }

  .wishlistText {
    display: none;
  }

  .wishlistWrapper:hover .wishlistText {
    display: inline;
  }

  .productDetails {
    padding: 15px;
    text-align: center;
  }

  .productTitle {
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 5px;
  }

  .productPrice {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

  .card__content {
    max-height: 80px;
  }

  /* Responsive Breakpoints */
  @media screen and (max-width: 768px) {
    /* Mobile - 1 product */
    .container {
      justify-content: center;
    }
    .productCard {
      flex: 0 0 100%;
      max-width: 275px;
    }
  }

  @media screen and (min-width: 769px) and (max-width: 1024px) {
    /* Tablet - 2 products */
    .container {
      justify-content: center;
    }
    .productCard {
      flex: 0 0 calc(50% - 20px);
      max-width: 275px;
    }
  }

  @media screen and (min-width: 1025px) {
    /* Desktop - 4 products */
    .container {
      justify-content: center;
    }
    .productCard {
      flex: 0 0 calc(25% - 20px);
      max-width: 275px;
    }
  }

  /* Flickity specific styles */
  .carousel {
    width: 100%;
  }

  .carousel-cell {
    width: 100%;
    margin-right: 20px;
  }

  /* Custom Flickity styles */
  .flickity-button {
    background: #fff;
    border: 1px solid #ddd;
  }

  .flickity-button:hover {
    background: #f0f0f0;
  }

  .flickity-prev-next-button {
    width: 40px;
    height: 40px;
  }

  .flickity-page-dots {
    bottom: -30px;
  }

  .flickity-page-dots .dot {
    width: 8px;
    height: 8px;
    opacity: 0.25;
    background: #000;
  }

  .flickity-page-dots .dot.is-selected {
    opacity: 1;
  }
</style>

