{{ 'quick-add.css' | asset_url | stylesheet_tag }}
<script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="container">
  <h2>{{ section.settings.header }}</h2>
  {% for i in (1..4) %}
    <div class="productCard">
      {% render 'CustomCardProduct2',
        card_product: section.settings.product,
        show_secondary_image: true,
        show_price: true,
        lazy_load: true,
        show_quick_add: true
      %}
    </div>
  {% endfor %}
</div>

<style>
  .container{
    display:flex;
    flex-direction:row;
    justify-content:center;
    gap:20px;
        margin: 15px;
  }
  /* General Card Styling */
  .productCard {
    position: relative;
    width: 275px;

  }

  .productOverlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.6);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .productImageWrapper:hover .productOverlay {
    opacity: 1;
  }

  .wishlistWrapper {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    color: #fff;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .heartIcon {
    font-size: 20px;
  }

  .productImageWrapper:hover .wishlistWrapper {
    opacity: 1;
  }

  .wishlistText {
    display: none;
  }

  .wishlistWrapper:hover .wishlistText {
    display: inline;
  }

  .productDetails {
    padding: 15px;
    text-align: center;
  }

  .productTitle {
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 5px;
  }

  .productPrice {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

    }
</style>

{% schema %}
{
  "name": "Custom Product Card",
  "settings": [
    {
      "type": "text",
      "id":"header",
      "label":"Heading"
    },
    {
      "type":"product",
      "id":"product",
      "label":"Featured Product",
    },
  ],
  "presets":[
    {
      "name": "Custom Product Card"
    }
  ]
}
{% endschema %}
